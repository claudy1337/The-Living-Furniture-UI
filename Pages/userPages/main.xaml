<Page x:Class="The_Living_Furniture_UI.Pages.userPages.main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.userPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="main">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Bottom" Margin="20,0,0,60">

                <Label Content="Furniture" FontFamily="Ubuntu Medium" FontSize="30"/>
                <TextBlock TextWrapping="Wrap" Margin="5" Text="Furniture Kualitas tinggi
Pilihan untuk menciptakan rumah yang nyaman" FontFamily="Ubuntu Light" FontSize="15" Width="217"/>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Consultation" FontFamily="Ubuntu Medium" HorizontalAlignment="Center" FontSize="20" Margin="0,10,0,0"/>
                    <TextBox Text="Material"
                     VerticalAlignment="Center"
                     Padding="10"
                     Background="#E4E3E3"
                     Margin="0,20,0,0"
                     FontSize="15" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Medium">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="9"/>
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Width" Value="200"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBox Text="Material"
                     Background="#E4E3E3"
                     FontFamily="Ubuntu Medium"
                     Margin="0,20,0,0"
                     FontSize="15" HorizontalAlignment="Left"
                     Padding="10">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="9"/>
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Width" Value="200"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <StackPanel HorizontalAlignment="Right">
                        <Button Content="Except ->"
                        Margin="0,10,10,0"
                        Foreground="White"
                        FontSize="19"
                        FontWeight="Medium">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#EB8F4C"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="FontFamily" Value="Poppins Medium"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E2A06F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>


                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150" Height="45"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>


            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <Image Source="/Assets/Images/mainC.png" Height="321" Width="242"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                        <Ellipse Fill="#EB8F4C" Height="30" Width="30"/>
                        <Ellipse Fill="#B49298" Height="30" Width="30" Margin="10,0,0,0"/>
                        <Ellipse Fill="#4B7A90" Height="30" Width="30" Margin="10,0,0,0"/>
                        <Ellipse Fill="#CC533E" Height="30" Width="30" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>


                <StackPanel>
                   
                    <Image Margin="40,50,0,-20" Source="/Assets/Images/MainL.png" Height="314" Width="237"/>
                    <StackPanel Orientation="Horizontal" Margin="55,25,0,0" HorizontalAlignment="Center">
                        <Ellipse Fill="#4B7A90" Height="30" Width="30"/>
                        <Ellipse Fill="#CC533E" Height="30" Width="30" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>



        </Grid>
    </Border>
</Page>
